{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "http://opds-community.github.io/workspace/schema/publication.schema.json",
  "title": "OPDS Publication",
  "properties": {
    "metadata": {
      "type": "object",
      "$ref": "http://readium.org/webpub-manifest/schema/metadata.schema.json"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    },
    "images": {
      "type": "array",
      "items": {
        "$ref": "http://readium.org/webpub-manifest/schema/link.schema.json"
      }
    }
  },
  "required": ["metadata", "links", "images"]
}